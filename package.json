{
  "name": "woodworking-tycoon",
  "version": "1.0.0",
  "description": "Woodworking idle game",
  "main": "index.js",
  "scripts": {
    "format": "npx prettier --write ./src/**/*.{ts,tsx}",
    "build": "node esbuild-client.config.mjs",
    "dev": "node esbuild-client.config.mjs --dev",
    "tsc": "tsc --noEmit",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonbw/woodworking-tycoon.git"
  },
  "author": "Simon Baumgardt-Wellander",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonbw/woodworking-tycoon/issues"
  },
  "homepage": "https://github.com/simonbw/woodworking-tycoon#readme",
  "nodemonConfig": {
    "enable-source-maps": true,
    "watch": [
      "dist/server"
    ]
  },
  "engines": {
    "npm": "10.x",
    "node": "20.x"
  },
  "prettier": {},
  "dependencies": {
    "@headlessui/tailwindcss": "^0.2.2",
    "@pixi/react": "^8.0.3",
    "@tailwindcss/typography": "^0.5.19",
    "pixi.js": "^8.2.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.22",
    "dotenv": "^16.3.1",
    "esbuild": "^0.27.0",
    "esbuild-serve": "^1.0.1",
    "esbuild-style-plugin": "^1.6.3",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-spring": "^10.0.3",
    "tailwindcss": "^3.4.18",
    "tailwindcss-opentype": "^1.2.0",
    "typescript": "^5.9.3",
    "typescript-lru-cache": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1"
  }
